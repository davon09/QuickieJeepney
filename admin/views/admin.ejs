<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/styles.css">
  <title>Admin Panel</title>
</head>
<body>
  <header>
    <nav>
      <a href="/users">Users</a>
      <a href="/register">Register</a>
    </nav>
  </header>
  <main>
    <% if (section === 'Dashboard') { %>
      <h1>Admin Dashboard</h1>
      <div class="stats-container">
        <div class="stat-box">
          <h2>Total Users</h2>
          <p><%= stats.totalUsers %></p>
        </div>
        <div class="stat-box">
          <h2>Total Jeepneys</h2>
          <p><%= stats.totalJeepneys %></p>
        </div>
        <div class="stat-box">
          <h2>Jeepneys Departed</h2>
          <p><%= stats.jeepneysDeparted %></p>
        </div>
        <div class="stat-box">
          <h2>Jeepneys About to Depart</h2>
          <p><%= stats.jeepneysAboutToDepart %></p>
        </div>
        <div class="stat-box">
          <h2>Jeepneys Left (Not Departing)</h2>
          <p><%= stats.jeepneysLeft %></p>
        </div>
      </div>
    <% } %>    
    <% if (section === 'Users') { %>
      <h1>Registered Users</h1>
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
          </tr>
        </thead>
        <tbody>
          <% data.forEach(user => { %>
            <tr>
              <td><%= user.id %></td>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } else if (section === 'Register') { %>
      <h1>Register Jeepney and Driver</h1>
      <form action="/register" method="POST">
        <label for="driverName">Driver Name:</label>
        <input type="text" id="driverName" name="driverName" required>
        <label for="jeepneyPlate">Jeepney Plate Number:</label>
        <input type="text" id="jeepneyPlate" name="jeepneyPlate" required>
        <button type="submit">Register</button>
      </form>
    <% } %>
  </main>
</body>
</html>
